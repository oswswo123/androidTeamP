<?xml version="1.0" encoding="utf-8"?><!-- ParkListActivity Layout입니다. -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOurIvory"
    android:orientation="vertical"
    tools:context=".ParkListActivity">

    <!-- 상단 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOurBlack">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nearParkinglots"
            android:textSize="25sp" />
    </LinearLayout>

    <!-- 리스트뷰 -->
    <ListView
        android:id="@+id/activity_park_list_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>